<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente2"
    tools:context="com.alexpfragosoatgmail.mensageirows.view.TelaLoginActivity">

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lv_mostrar_mensagens_ordenadas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="55dp"
        android:divider="@color/colorCinzaAzul"
        android:footerDividersEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="com.alexpfragosoatgmail.mensageirows.view.MostrarMensagensActivity">

    </ListView>

    <TextView
        android:id="@+id/tv_nome_contato_em_conversa"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@color/colorCinzaAzul"
        android:fontFamily="cursive"
        android:text="       Contato"
        android:textAlignment="textStart"
        android:textColor="@color/colorCreme"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_enviar_mensagem"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/colorAzulEscuro"
        android:text="Enviar"
        android:textColor="@color/colorCreme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/et_mensagem_pronta_para_envio" />

    <EditText
        android:id="@+id/et_mensagem_pronta_para_envio"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@color/colorCinzaAzul"
        android:textColor="@color/colorAzulEscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_nome_contato_em_conversa"
        app:srcCompat="@drawable/user" />

</android.support.constraint.ConstraintLayout>

